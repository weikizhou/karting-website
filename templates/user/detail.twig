{% extends 'user/base.html.twig' %}

{% block main %}
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-10 m-auto">
                    {{ form_start(userForm) }}
                    <div class="row">
                        <h2>Wijzig uw account</h2>
                        <hr class="m-0">

                        <label class="mt-3">E-mailadres</label>
                        <div class="form-input">
                            <i class="far fa-envelope fa-lg"></i>
                            {{ form_row(userForm.email) }}
                        </div>

                        <label class="mt-3">Volledige naam</label>
                        <div class="form-input">
                            <i class="fas fa-id-card-alt fa-lg"></i>
                            {{ form_row(userForm.name) }}
                        </div>

                        <label class="mt-3">Gebruikersnaam</label>
                        <div class="form-input">
                            <i class="fas fa-user fa-lg"></i>
                            {{ form_row(userForm.username) }}
                        </div>

                    </div>
                    <div class="row mt-5">
                        <h2>Persoonlijke informatie</h2>
                        <hr class="m-0">
                        <label class="mt-3">Telefoon</label>
                        <div class="form-input">
                            <i class="fas fa-phone fa-lg"></i>
                            {{ form_row(userForm.phone) }}
                        </div>

                        <label class="mt-3">Geboorte datum</label>
                        <div class="form-input">
                            <i class="fas fa-calendar-alt fa-lg"></i>
                            {{ form_row(userForm.date_of_birth) }}
                        </div>

                        <div class="row p-0">
                            <div class="col-md-12 col-lg-7 mx-3">
                                <label class="mt-3">Postcode</label>
                                <div class="form-input">
                                    <i class="fas fa-map-marked-alt fa-lg"></i>
                                    {{ form_row(userForm.postal_code) }}
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-4 p-0">
                                <label class="mt-3">Huis nr.</label>
                                <div class="form-input">
                                    <i class="fas fa-home fa-lg"></i>
                                    {{ form_row(userForm.house_nr) }}
                                </div>
                            </div>
                        </div>

                        <label class="mt-3">Adres</label>
                        <div class="form-input">
                            <i class="fas fa-map-pin fa-lg"></i>
                            {{ form_row(userForm.address) }}
                        </div>
                    </div>
                    <button class="btn btn-lg btn-blue my-3" type="submit">
                         Opslaan
                    </button>
                    <a class="btn btn-lg btn-blue my-3" href="{{ path('reset-password') }}">
                        Wijzig wachtwoord
                    </a>
                    {{ form_end(userForm) }}
                </div>


            </div>
        </div>
    </div>
{% endblock %}
