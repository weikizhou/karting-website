{% extends 'base.html.twig' %}

{% block main %}
    {% set currentPath = path(app.request.attributes.get('_route'),
        app.request.attributes.get('_route_params')) %}

    {% if currentPath == "/aanbod" %}
        {% include 'frontend/component/aanbod.twig' %}
    {% else %}
        <div class="container-fluid">
            {% for section in sections %}
                <div class="row">
                    {% if section.textAlign == 0 %}
                        <div class="section-content-{{ section.textAlign }} {{ loop.index is odd ? 'bg-brown' : 'bg-blue' }} shadow">
                            <h2>{{ section.title }}</h2>
                            {{ section.content|raw }}
                        </div>
                        <img class="section-image-{{ section.textAlign }} p-0 shadow"
                             src="{{ asset('assets/uploads/section/'~section.image) }}" alt="section image">
                    {% else %}
                        <img class="img-fluid section-image-{{ section.textAlign }} p-0 shadow"
                             src="{{ asset('assets/uploads/section/'~section.image) }}" alt="section image">
                        <div class="section-content-{{ section.textAlign }} {{ loop.index is odd ? 'bg-brown' : 'bg-blue' }} shadow">
                            <h2>{{ section.title }}</h2>
                            {{ section.content|raw }}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}

