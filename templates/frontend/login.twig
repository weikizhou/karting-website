{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-10 m-auto">
                <div class="row login-row">
                    <div class="col-md-12 col-lg-6 inlog-form px-5">
                        <h2>Inloggen</h2>
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    U bent ingelogd {{ app.user.username }}, <a href="{{ path('app_logout') }}">Uitloggen</a>
                                </div>
                            {% endif %}

                            <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" placeholder="Gebruikersnaam" required autofocus>
                            <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Wachtwoord" required>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}">
                            <button class="btn btn-lg btn-blue" type="submit">
                                Inloggen
                            </button>
                        </form>
                    </div>

                    <div class="col-md-12 col-lg-6 px-5">
                        <h3>Nieuw bij Kartcentrum Max?</h3>
                        <p>Maak binnen 2 minuten een account aan.</p>

                        <a class="btn btn-lg btn-blue" href="{{ path('registration') }}">Maak een account aan</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}